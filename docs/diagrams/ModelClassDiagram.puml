@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyPlanus <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Interface TimeSlot <<Interface>>
Class Planus
Class ReadOnlyPlanus
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs

Package Task {
Class Task
Class Event
Class Deadline
Class Lesson
Class Calendar
Class Title
Class Description
Class Tag
Class UniqueTaskList
}

Package Deadline {
Class Deadline
Class DeadlineDateTime
Class DoneDateTime
Class Duration
Class Status
}

Package Event {
Class Event
Class EndDateTime
Class StartDateTime
}

Package Lesson {
Class Lesson
Class Time
Class UniqueLessonList
}

Package Calendar {
Class Calendar
}

Package Tag {
Class Tag
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

Planus .up.|> ReadOnlyPlanus

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" Planus
ModelManager o-left-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

Planus *--> "1" UniqueTaskList
UniqueTaskList o--> "*" Task
Task *--> Title
Task *--> Description
Task *--> Tag

Event --|> Task
Event .up.|> TimeSlot
Event *--> EndDateTime
Event *--> StartDateTime

Deadline --|> Task
Deadline *--> DeadlineDateTime
Deadline *--> DoneDateTime
Deadline *--> Status
Deadline *--> Duration

Lesson --|> TimeSlot
Planus *--> "1" UniqueLessonList
UniqueLessonList o--> "*" Lesson
Lesson *--> Title
Lesson *--> Description
Lesson *--> Tag
Lesson *--> Time

Planus *.left.> "1" Calendar

Title -[hidden]right-> Tag
Tag -[hidden]right-> Description

ModelManager -->"1" Task : filtered list
ModelManager -->"1" Lesson : filtered list
ModelManager -->"1" Calendar : filtered list
@enduml
